
import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=sc.nextInt();
        int d=sc.nextInt();
        int e=sc.nextInt();
        float p=c+d+e;
        float a1=(a*b*2);
        float area=a1/4;
        System.out.printf("Area of Triangle is %.2f\n",area);
        System.out.printf("Perimeter of Triangle is %.2f",p);
                
        
    }
}
